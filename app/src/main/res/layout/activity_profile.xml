<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/colorBlack"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/user"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/abeezee"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Osman Ansari"/>
                    <Button
                        style="@style/customTabText"
                        android:backgroundTint="@color/colorWhite"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/abeezee"
                        android:layout_marginLeft="20dp"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="New Foodie"
                        />



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/abeezee"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="50"
                     />
                <TextView
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/abeezee"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Points"
                    />
                <TextView
                    android:background="@color/colorWhite"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/abeezee"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="  -----           "/>
                <TextView
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/abeezee"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="500"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/abeezee"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="5"
                    />
                <TextView
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/abeezee"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Rupees"
                    />
                <Button
                    style="@style/customTabText"
                    android:backgroundTint="@color/colorGreen"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/abeezee"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:textAlignment="center"
                    android:text="Redeem"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />




            </LinearLayout>

        </LinearLayout>

            <TextView
                android:background="@color/redPrimaryDark"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/abeezee"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="Click Redeem to get earnings direct in PayTm Wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/abeezee"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="Earn More Points"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/abeezee"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="View Passbook"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/refer"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/abeezee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Refer Friends"/>
                    <TextView
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/abeezee"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Earn 20 points when your friend installs using your link and logs in"
                        />



                </LinearLayout>



                </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/redPrimaryDark"
                            android:fontFamily="@font/abeezee"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:text="copy Link"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:textColor="@color/colorGreen"
                            android:fontFamily="@font/abeezee"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:text="Refer Friend"
                            android:gravity="center_horizontal" />
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/smartphone"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                        <LinearLayout
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/abeezee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:text="Open App Everyday"/>
                            <TextView
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/abeezee"
                                android:layout_marginTop="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:text="Collect Prize everyday to get 5 points"
                                />



                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/redPrimaryDark"
                            android:fontFamily="@font/abeezee"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:text="Cancel Reminder"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:textColor="@color/colorGreen"
                            android:fontFamily="@font/abeezee"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:text="Collect Prize"
                            android:gravity="center_horizontal" />
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/abeezee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Rate Your Experience"
                    android:gravity="center_horizontal" />


                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:stepSize="1"/>
            </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>



    </ScrollView>
</LinearLayout>