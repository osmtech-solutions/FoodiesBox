<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_marginBottom="58dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:orientation="vertical"
                android:background="@drawable/login_bg">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_marginTop="13dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dancer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Foodies Box"
                            android:textAlignment="center"
                            android:textColor="@color/redPrimaryDark"
                            android:textSize="35dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Get started"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Enter your phone number and we will send an OTP to continue"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/login_ll"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/box_white_curve">

                    <TextView

                        android:textAlignment="center"
                        android:fontFamily="@font/abeezee"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login to your account"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center_horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_phone"/>

                        <EditText
                            android:fontFamily="@font/abeezee"
                            android:id="@+id/login_emailid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:drawablePadding="10dp"
                            android:hint="Enter your phone number"
                            android:inputType="phone"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_password"/>

                        <EditText
                            android:fontFamily="@font/abeezee"
                            android:id="@+id/login_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:drawablePadding="10dp"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:id="@+id/txt_skip"
                            android:fontFamily="@font/abeezee"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:layout_weight="1"
                            android:text="Skip Login >>"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:fontFamily="@font/abeezee"
                            android:id="@+id/tvForgetPassword"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:layout_weight="1"
                            android:gravity="end|center"
                            android:text="Forgot Password ?"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:fontFamily="@font/abeezee"
                android:id="@+id/loginBtn"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="Send OTP"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_below="@+id/login_ll"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                android:layout_marginTop="-24dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:background="@drawable/button_bg"/>

            <LinearLayout
                android:layout_below="@+id/loginBtn"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:background="@color/colorGrey"
                    android:layout_height="1dp"/>
                <TextView
                    android:fontFamily="@font/abeezee"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="OR"/>
                <View
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:background="@color/colorGrey"
                    android:layout_height="1dp"/>

            </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ll_facebook"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/facebook"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/abeezee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:text="Continue with Facebook"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ll_google"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/google"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/abeezee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:text="Continue with Google"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ll_email"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/email1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/abeezee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:text="Continue with Email"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingLeft="26dp"
        android:paddingRight="26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/layout_bg"
            android:orientation="horizontal" >

            <TextView
                android:fontFamily="@font/abeezee"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <TextView
                android:fontFamily="@font/abeezee"
                android:id="@+id/signUpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SignUp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:focusable="true"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>